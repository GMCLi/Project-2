<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Manage your Classic Cars</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="car-model">Car Model</label>
            <input type="text" id="car-model" class="form-control" aria-describedby="car-model"
              placeholder="Enter Car Model">
          </div>
          <div class="form-group">
            <label for="car-color">Car Color</label>
            <input class="form-control" id="car-color" aria-describedby="car-color"
              placeholder="Enter Car Color"></input>
          </div>
          <div class="form-group">
            <label for="car-year">Car Color</label>
            <input class="form-control" id="car-year" aria-describedby="car-year" placeholder="1976"></input>
          </div>
          <div class="form-group">
            <label for="car-image">Car Image</label>
            <input class="form-control" id="car-image" aria-describedby="car-image" placeholder="car image URL"></input>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Available Cars</h3>
        <ul id="car-list" class="list-group">
          {{#each cars}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="carupdate/{{this.id}}">{{this.model}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/cars.js"></script>