<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="customer-name">Customer Name</label>
            <input type="text" id="customer-name" class="form-control" aria-describedby="customer-name" placeholder="Enter Customer Name">
          </div>
          <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="customer-birthday">Customer Date Of Birth</label>
            <input type="text" id="customer-birthday" class="form-control" aria-describedby="customer-birthday" placeholder="YY/MM/DD">
          </div>
          <div class="form-group">
            <label for="customer-tel">Customer Telephone Number</label>
            <input type="text" id="customer-tel" class="form-control" aria-describedby="customer-tel" placeholder="Phone Numebr">
          </div>
          {{!-- <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div> --}}
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Customers:</h3>
        <ul id="example-list" class="list-group">
          {{#each customer}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="customer/{{this.dataValues.id}}">{{this.dataValues.customerName}}</a>
            <button class="btn btn-warning float-right update" onclick="location.href = 'http://localhost:3000/customer/{{this.dataValues.id}}/customerupdate';">Update</button> 
            <button class="btn btn-danger float-right delete"><i class="icon-remove"></i>Delete</button> 
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
